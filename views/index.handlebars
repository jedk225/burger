<div class="container">
	<div class="row">
		<h1>Eat-Da-Burger</h1>
	</div>
	<div class="div"></div>
	<br>
	<br>
	<div class="row">
		<div class="col-lg-6">
			<h2>Available Burgers</h2>
			<hr>
			<br>
			<ul>
				{{#each burgers}}
				<li>
					{{#unless devoured}} {{burger_name}}
					<button class="devour btn btn-sm btn-primary" data-id="{{id}}" data-devour="{{devoured}}">
						Devour
					</button>
					{{/unless}}
				</li>
				{{/each}}
			</ul>
		</div>

		<div class="col-lg-6">
			<h2>Devoured Burgers</h2>
			<hr>
			<br>
			<ul>
				{{#each burgers}}
				<li>
					{{#if devoured}} {{burger_name}}
					{{/if}}
				</li>
				{{/each}}
			</ul>

		</div>
	</div>

</div>